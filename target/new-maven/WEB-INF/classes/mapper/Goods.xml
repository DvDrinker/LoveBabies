	<!--private Integer goodsInventory;-->
	<!--private Integer goodsSalesVolum;-->
	<!--private Integer goodsThirdClassifyId;-->
	<!--private Date goodsGroundingTime;-->
	<!--private Integer deleteId;-->
	<!--private String goodsNum;-->
</mapper>
